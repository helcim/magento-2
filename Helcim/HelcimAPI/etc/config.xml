<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <helcim_api>
                <debug>1</debug>
                <active>0</active>
                <model>HelcimAPI</model>
                <test>1</test>
                <account_id></account_id>
                <api_token backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <js_token></js_token>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <title>Credit Card (Helcim)</title>
                <currency>CAD,USD</currency>
                <enable_cvv>1</enable_cvv>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>
                <debugReplaceKeys>MERCHANT_KEY</debugReplaceKeys>
                <cctypes>AE,VI,MC,DI</cctypes>
            </helcim_api>
        </payment>
    </default>
</config>
